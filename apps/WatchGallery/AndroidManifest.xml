<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.watchgallery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/picture"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.android.watchgallery.MainActivity" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.android.watchgallery.DeleteActivity"></activity>
        <activity android:name="com.android.watchgallery.single.SingleListActivity"></activity>
    </application>

</manifest>
