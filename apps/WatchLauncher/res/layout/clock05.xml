<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:analogclock="http://schemas.android.com/apk/res/com.szkj.watch.launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dial05">

    <TextView android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ClockDateText.Clock5"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="36px"/>
    
    <ImageView android:id="@+id/battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <TextView android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call05"
        style="@style/ClockCallText"
        android:gravity="center"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="0px"
        android:layout_marginBottom="0px"/>
        
    <TextView android:id="@+id/sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sms05"
        style="@style/ClockSmsText"
        android:gravity="center"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="0px"
        android:layout_marginBottom="0px"/>
    
    <com.szkj.watch.launcher.clock.AnalogClock
        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        analogclock:hour="@drawable/hour05"
        analogclock:minute="@drawable/minute05"
        analogclock:second="@drawable/second05"/>
</FrameLayout>
