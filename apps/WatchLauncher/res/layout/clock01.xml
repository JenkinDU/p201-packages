<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:analogclock="http://schemas.android.com/apk/res/com.infocomiot.watch.launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dial01">

    <TextView android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ClockDateText.Clock1"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    
    <ImageView android:id="@+id/battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    
    <TextView android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/call01"
        style="@style/ClockCallText"
        android:gravity="center_vertical"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView android:id="@+id/sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/sms01"
        style="@style/ClockSmsText"
        android:gravity="center_vertical"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    
    <com.infocomiot.watch.launcher.clock.AnalogClock
        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        analogclock:hour="@drawable/hour01"
        analogclock:minute="@drawable/minute01"
        analogclock:second="@drawable/second01"
        analogclock:pin="@drawable/pin01"/>
</FrameLayout>
