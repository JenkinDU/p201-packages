<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <Button
        android:id="@+id/setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@drawable/aid_main_press_set" />

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_hear" />

    <LinearLayout
        android:id="@+id/volume"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:focusable="false"
       android:gravity="center_vertical"
         >

        <Button
            android:id="@+id/main_sub"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/aid_main_press_cut" />

        <SeekBar
            android:id="@+id/progress_main_vol"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:max="15"
            android:progress="4" />

        <Button
            android:id="@+id/main_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/aid_main_press"
           />

    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@id/volume"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:background="@drawable/button_background" />

</RelativeLayout>