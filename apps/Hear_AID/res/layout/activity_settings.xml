<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout style="@style/Setting_LinearLayout" >

            <TextView
                style="@style/Setting_Title"
                android:text="@string/hear_level" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radiobutton_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/first_level" />

                <RadioButton
                    android:id="@+id/radiobutton_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/second_level" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout style="@style/Setting_LinearLayout" >

            <TextView
                style="@style/Setting_Title"
                android:text="@string/noise_reduction" />

            <TextView
                android:id="@+id/noise_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="@string/stop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:text="@string/start" />
        </LinearLayout>

        <LinearLayout style="@style/Setting_LinearLayout" >

            <TextView
                style="@style/Setting_Title"
                android:text="@string/channel_balance" />

            <TextView
                android:id="@+id/channel_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:text="@string/add" />

            <SeekBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:max="10"
                android:progress="3"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/channel_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:text="@string/sub" />
        </LinearLayout>

        <LinearLayout style="@style/Setting_LinearLayout" >

            <TextView
                style="@style/Setting_Title"
                android:text="@string/high_pitch" />

            <TextView
                android:id="@+id/high_pitch_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:text="@string/add" />

            <SeekBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                 android:max="10"
                android:progress="5"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/high_pitch_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:text="@string/sub" />
        </LinearLayout>

        <LinearLayout style="@style/Setting_LinearLayout" >

            <TextView
                style="@style/Setting_Title"
                android:text="@string/low_pitch" />

            <TextView
                android:id="@+id/low_pitch_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:padding="15dp"
                android:text="@string/add" />

            <SeekBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:max="10"
                android:progress="6"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/low_pitch_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:text="@string/sub" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>