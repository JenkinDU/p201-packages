<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     
    <LinearLayout 
        android:id="@+id/message_delete_title_ll"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/message_delete_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="取消"
            android:textSize="20sp"/>
        
        <TextView 
            android:id="@+id/message_delete_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="已选择1项"
            android:textColor="#ffffff"
            android:gravity="center_horizontal" />
        
         <TextView 
             android:id="@+id/message_delete_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="全选"
            android:textSize="20sp" />
    </LinearLayout>
    
    <ListView 
        android:id="@+id/message_lv"
        android:layout_width="fill_parent"
        android:layout_below="@+id/message_delete_title_ll"
        android:layout_height="match_parent"/>
    
     <ImageView 
         android:id="@+id/message_bottom_image"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:src="@drawable/message_edit" />

</RelativeLayout>
