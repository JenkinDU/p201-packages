<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/contact_detail_bg"
    android:background="@drawable/contact_bg"
    android:layout_height="match_parent">
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        
        <RelativeLayout 
            android:layout_weight="@string/layout_weight_three"
            android:layout_width="0dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" >
            <ImageView 
                android:id="@+id/contact_detail_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/contact_call"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_weight="@string/layout_weight_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
            <ImageView 
                android:id="@+id/contact_detail_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:src="@drawable/contact_meassge"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_weight="@string/layout_weight_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
            <ImageView 
                android:id="@+id/edit_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/edit_contact"
                />
        </RelativeLayout>
         <ImageView 
                android:id="@+id/delete_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/delete_contact"
                />
    </LinearLayout>
    
</RelativeLayout>
