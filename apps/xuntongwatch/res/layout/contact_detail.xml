<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        
        >

        <ImageView
            android:layout_margin="10dp" 
            android:id="@+id/contact_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
        
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
             android:orientation="horizontal" >

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/delete_contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/contact_delete_press" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/background_contact" 
       
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

  <TextView
      android:layout_marginLeft="10dp"      android:id="@+id/contact_phone"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="2.1"
      android:textColor="#000000"
      android:textSize="28sp" 
     android:gravity="center_vertical" />
         
                <ImageView
                android:id="@+id/edit_contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:src="@drawable/contact_edit_press" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/contact_detail_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/call_press" />

            <ImageView
                android:id="@+id/contact_detail_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/contact_message_press" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>