<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <com.example.xuntongwatch.view.MyTextView
        android:id="@+id/keyboad_tv"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textSize="23sp"
        android:gravity="center_vertical"
        android:textColor="#ffffff" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/keyboad_bt_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/button_press"
            android:textSize="35sp"
            android:layout_weight="1" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <Button
            android:id="@+id/keyboad_bt_two"
            android:layout_width="0dp"
            android:background="@drawable/button_press"
            android:textColor="#ffffff"
            android:text="2"
            android:textSize="35sp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <Button
            android:id="@+id/keyboad_bt_three"
            android:gravity="center"
            android:text="3"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_press"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/keyboad_bt_four"
            android:layout_width="0dp"
            android:background="@drawable/button_press"
            android:text="4"
            android:gravity="center"
            android:textSize="35sp"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:layout_weight="1" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <Button
            android:id="@+id/keyboad_bt_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_press"
            android:layout_weight="1"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <Button
            android:id="@+id/keyboad_bt_six"
            android:text="6"
            android:background="@drawable/button_press"
            android:textSize="35sp"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/keyboad_bt_seven"
            android:layout_width="0dp"
            android:text="7"
            android:background="@drawable/button_press"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <Button
            android:id="@+id/keyboad_bt_eight"
            android:layout_width="0dp"
            android:text="8"
            android:textColor="#ffffff"
            android:background="@drawable/button_press"
            android:gravity="center"
            android:textSize="35sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <Button
            android:id="@+id/keyboad_bt_nine"
            android:layout_width="0dp"
            android:text="9"
            android:background="@drawable/button_press"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/keyboad_bt_xin"
            android:text="*"
            android:textSize="35sp"
            android:background="@drawable/button_press"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:layout_weight="1" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <Button
            android:id="@+id/keyboad_bt_zero"
            android:text="0"
            android:background="@drawable/button_press"
            android:textSize="35sp"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#000000" />

        <Button
            android:id="@+id/keyboad_bt_jin"
            android:layout_width="0dp"
            android:background="@drawable/button_press"
            android:text="#"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="35sp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/keyboad_rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" >

            <ImageView
                android:id="@+id/keyboad_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/back_press" />
        </RelativeLayout>

        <Button
            android:id="@+id/keyboad_bt_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="@drawable/bt_call" />

        <RelativeLayout
            android:id="@+id/keyboad_rl_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" >

            <ImageView
                android:id="@+id/keyboad_iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/delete_press" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>