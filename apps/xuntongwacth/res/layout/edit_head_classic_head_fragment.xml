<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/edit_head_classic_head_fragment_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical" >

        <LinearLayout
             android:layout_gravity="center_vertical"
            android:id="@+id/edit_head_classic_head_fragment_linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000" >

            <GridView
                android:id="@+id/edit_head_classic_head_fragment_gridView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@drawable/menuitemshape" >
            </GridView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>